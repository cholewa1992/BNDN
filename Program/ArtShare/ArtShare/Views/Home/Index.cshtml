@model ArtShare.Models.SearchModel
@{
    ViewBag.Title = "Index";
}

<div class="is-center page-header">
    <h1>ARTSHARE</h1>
</div>

<div class="featured">
    <div class="featured_container is-center">

        @if (Model.Movies != null)
        {
            foreach (var m in Model.Movies)
            {
                
                        <div class="col-md-2">
                            <a href="/Details/@m.ProductId" class="thumbnail">
                                <img data-src="holder.js/100%x180" src="@m.Thumbnail">
                            </a>
                            <div class="caption">
                                @m.Title
                            </div>
                        </div>
            }
        }
        
    </div>
    
    <hr />
    <div style="margin-top: 10px"></div>
    <div class="featured_container is-center">

        @if (Model.Music != null)
        {
            foreach (var m in Model.Music)
            {

                <div class="col-md-2">
                    <a href="/Details/@m.ProductId" class="thumbnail">
                        <img data-src="holder.js/100%x180" src="@m.Thumbnail">
                    </a>
                    <div class="caption">
                        @m.Title
                    </div>
                </div>
            }
        }

    </div>

    <hr />

    <div class="featured_container is-center">

        @if (Model.Books != null)
        {
            foreach (var m in Model.Books)
            {

                <div class="col-md-2">
                    <a href="/Details/@m.ProductId" class="thumbnail">
                        <img data-src="holder.js/100%x180" src="@m.Thumbnail">
                    </a>
                    <div class="caption">
                        @m.Title
                    </div>
                </div>
            }
        }

    </div>
</div>
