@model ArtShare.Models.SearchModel

@{
    ViewBag.Title = "SearchMediaItems";
}

<h2>Search results for "@Request.Params["searchKey"]"</h2>
<span class="is-center">
    <div class="col-md-4">
        <h4>Movies</h4>
        <table class="table table-striped table-hover search-table">
            <tbody id="tablebody1">
                @if(Model.Movies != null){
                    foreach(var m in Model.Movies){
                        <tr onclick="window.location.href='../Details/@m.ProductId'">
                            <td><span class="glyphicon glyphicon-film"></span></td>
                            <td><span class="to-left">@m.Title (@m.ReleaseDate)</span></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-4">
        <h4>Music</h4>
        <table class="table table-striped table-hover search-table">
            <tbody id="tablebody1">
                @if (Model.Music != null)
                {
                    foreach (var m in Model.Music)
                    {
                        <tr onclick="window.location.href='../Details/@m.ProductId'">
                            <td><span class="glyphicon glyphicon-film"></span></td>
                            <td><span class="to-left">@m.Title (@m.ReleaseDate.Value.Year)</span></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-4">
        <h4>Books</h4>
        <table class="table table-striped table-hover search-table">
            <tbody id="tablebody1">
                @if (Model.Books != null)
                {
                    foreach (var m in Model.Books)
                    {
                        <tr onclick="window.location.href='../Details/@m.ProductId'">
                            <td><span class="glyphicon glyphicon-film"></span></td>
                            <td><span class="to-left">@m.Title (@m.ReleaseDate.Value.Year)</span></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</span>


