@model ArtShare.Models.SearchModel
@{
    ViewBag.Title = "Index";
}

<div class="page-header">
    <h1>ARTSHARE</h1>
</div>

<!--<div class="is-center page-header">
    <h1>ARTSHARE</h1>
</div>-->

<section class="Collage effect-parent">
    @if (Model.Movies != null)
    {
        foreach (var m in Model.Movies)
        {
            <div class="Image_Wrapper" data-caption="@m.Title" onclick="window.location.href = '/Details/@m.ProductId'" style="cursor:pointer">
                <img src="@m.Thumbnail">
            </div>
        }
    }
        
    @if (Model.Music != null)
    {
        foreach (var m in Model.Music)
        {

            <div class="Image_Wrapper" data-caption="@m.Title" onclick="window.location.href = '/Details/@m.ProductId'" style="cursor:pointer">
                <img src="@m.Thumbnail">
            </div>
        }
    }
    
    @if (Model.Books != null)
    {
        foreach (var m in Model.Books)
        {

            <div class="Image_Wrapper" data-caption="@m.Title" onclick="window.location.href = '/Details/@m.ProductId'" style="cursor:pointer">
                <img src="@m.Thumbnail">
            </div>
        }
    }

</section>