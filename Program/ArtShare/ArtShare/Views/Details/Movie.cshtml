@using System.Activities.Expressions
@model ArtShare.Models.MovieDetailsModel

@{
    ViewBag.Title = Model.Title;
}

<script>
    function rate(val) {
        document.getElementById("choice").textContent = "Rated " + val + " / 10";
    }

    $(':radio').change(
  function () {
      $('.choice').text(this.value + ' stars');
  }
)
</script>




<legend class="clearfix">
    <h1 class="to-left clear">
        @Html.DisplayFor(model => model.Title) <small>(@Html.DisplayFor(model => model.ReleaseDate.Value.Year))</small>

    </h1>
    <div class="to-right detail-buttons clearfix">
        @switch (Model.AccessRight)
        {
            case 0: <button class="pure-button button-art" data-toggle="modal" data-target="#myModal">Buy</button> break;
            case 1: <button class="pure-button button-art" onclick="window.location.href='/Download/@Model.ProductId?fileName=@Model.Title'">Download</button> break;
            case 2: <button class="pure-button button-art" onclick="window.location.href='/Download/@Model.ProductId?fileName=@Model.Title'">Download</button><button class="pure-button button-art">Edit</button> break;
        }
    </div>

</legend>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Are you sure want to purchase @Html.DisplayFor(model => model.Title)? </h4>
            </div>
            <div class="modal-body">
                <h4>Summary:</h4>

                <table class="table">
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Title)</strong></td>
                        <td>@Html.DisplayFor(model => model.Title)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Director)</strong></td>
                        <td>@Html.DisplayFor(model => model.Director)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Description)</strong></td>
                        <td>@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Price)</strong></td>
                        <td>@Html.DisplayFor(model => model.Price)</td>
                    </tr>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="window.location.href='/Details/PurchaseItem?mediaId=@Model.ProductId'">Confirm</button>
            </div>
        </div>
    </div>
</div>


<div class="media-details">
    <div class="row">
        <div class="col-md-3">
            <img src="@Html.DisplayFor(model => model.Thumbnail)" />
            @if (Model.RatingsGiven > 0)
            {
                <ul class="list-group">
                    <li class="list-group-item"><strong>Average Rating:</strong> @Model.AvgRating</li>
                    <li class="list-group-item"><strong>Ratings Cast:</strong> @Model.RatingsGiven</li>
                </ul>
            }
            else
            {
                <div class="is-center">
                    <strong>Not yet rated</strong>    
                </div>
            }
            @*Only show the rating form if the user is "buyer" / AccessRight = 1*@
            @if(Model.AccessRight == 1){
                <div class="is-center">
                    <form method="post" action="/Details/RateMediaItem">
                        <input type="hidden" name="mediaId" value="@Html.DisplayFor(model => model.ProductId)" />

                        <span class="star-rating ">
                            <input type="radio" name="rating" value="1" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="2" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="3" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="4" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="5" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="6" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="7" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="8" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="9" onclick="submit()"><i></i>
                            <input type="radio" name="rating" value="10" onclick="submit()"><i></i>
                        </span><br />
                    </form>
                </div>
                }
        </div>
        <div class="col-md-5">
            <h4>Description</h4>
            @Html.DisplayFor(model => model.Description)
            <hr />
            <h4>
                Genre
            </h4>
            @if (Model.Genres != null) {
                foreach (var genre in Model.Genres)
                {
                    <button class="pure-button">@genre</button>

                }
            }
            <hr />

            <h4>Tags</h4>
            @if (Model.Tags != null) {
                foreach (var t in Model.Tags)
                {
                    <button class="pure-button"><span class="glyphicon glyphicon-tag" style="font-size:small"></span> @t </button>
                }
            }
            <hr />

            <h4>Cast</h4>
            <ul class="list-group">
                @if (Model.CastMembers != null) {
                    foreach (var p in Model.CastMembers)
                    {
                        <li class="list-group-item">
                            <a href="#">
                                @p
                            </a>
                        </li>
                    }
                }
            </ul>
            <hr />


        </div>
        <div class="col-md-1">
            <!-- SPACER -->
        </div>
        <div class="col-md-3">
            <h4>Movie Info</h4>
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Language)</strong> <br />
                    @Html.DisplayFor(model => model.Language)
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Runtime)</strong> <br />
                    @Html.DisplayFor(model => model.Runtime) min.
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Director)</strong> <br />
                    @Html.DisplayFor(model => model.Director)
                </li>
            </ul>

            <h4>Access Info</h4>
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>Uploader</strong> <br />
                    @Html.DisplayFor(m => m.UploaderName)
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Price)</strong> <br />
                    $@Html.DisplayFor(model => model.Price)
                </li>
                @*<li class="list-group-item">
                    <strong>Status</strong> <br />
                    Owner / Buyer / Something
                </li>*@
            </ul>



        </div>
    </div>
</div>

<div class="to-right">

</div>