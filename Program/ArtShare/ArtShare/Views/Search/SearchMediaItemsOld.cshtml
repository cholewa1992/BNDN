@model ArtShare.Models.SearchModel

@{
    ViewBag.Title = "SearchMediaItems";
}

<script>
    function setActive(tr, id) {
        var ch1 = document.getElementById('tablebody1').children;
        for (var i = 0; i < ch1.length; i++) {
            ch1[i].className = "";
        }

        var ch2 = document.getElementById('tablebody2').children;
        for (var i = 0; i < ch2.length; i++) {
            ch2[i].className = "";
        }

        var ch3 = document.getElementById('tablebody3').children;
        for (var i = 0; i < ch3.length; i++) {
            ch3[i].className = "";
        }

        tr.className = "info";

        var ch2 = document.getElementById('extended-results').children;
        for (var j = 0; j < ch2.length; j++) {
            ch2[j].style.display = "none";
        }

        document.getElementById("item-" + id).style.display = "block";
    }

    function collapseIn(tag) {
        var span = tag.getElementsByTagName('DIV')[0].getElementsByTagName('SPAN')[0];
        if (span.className == "glyphicon glyphicon-chevron-up") {
            span.className = "glyphicon glyphicon-chevron-down";
        } else {
            document.getElementById("glyph1").className = "glyphicon glyphicon-chevron-down";
            document.getElementById("glyph2").className = "glyphicon glyphicon-chevron-down";
            document.getElementById("glyph3").className = "glyphicon glyphicon-chevron-down";
            span.className = "glyphicon glyphicon-chevron-up";
        }
    }
</script>

<h2>Search results for "@Request.Params["searchKey"]"</h2>

<div class="col-md-5">
    <h6>Showing 1-6 of 6 results</h6>
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" onclick="collapseIn(this)">
                        <div class="to-right">
                            <span id="glyph1" class="glyphicon glyphicon-chevron-up"></span>
                        </div>
                        Movies
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body">
                    <table class="table table-striped table-hover search-table">
                        <tbody id="tablebody1">
                            <tr onclick="setActive(this, 12);" class="info">
                                <td><span class="glyphicon glyphicon-film"></span></td>
                                <td>Repo Men (2012)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" onclick="collapseIn(this)">
                        <div class="to-right">
                            <span id="glyph2" class="glyphicon glyphicon-chevron-down"></span>
                        </div>
                        Music
                    </a>
                </h4>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse">
                <div class="panel-body">
                    <table class="table table-striped table-hover search-table">
                        <tbody id="tablebody2">
                            <tr onclick="setActive(this, 13);">
                                <td><span class="glyphicon glyphicon-music"></span></td>
                                <td>Wrecking Ball (2013)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" onclick="collapseIn(this)">
                        <div class="to-right">
                            <span id="glyph3" class="glyphicon glyphicon-chevron-down"></span>
                        </div>
                        Books
                    </a>
                </h4>
            </div>
            <div id="collapseThree" class="panel-collapse collapse">
                <div class="panel-body">
                    <table class="table table-striped table-hover search-table">
                        <tbody id="tablebody3">
                            <tr onclick="setActive(this, 14);">
                                <td><span class="glyphicon glyphicon-book"></span></td>
                                <td>A Study in Scarlet (1887)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <ul class="pager">
        @if (!Request.Params["from"].Equals("1"))
        {
            <li class="previous to-left"><button class="pure-button">Previous</button></li>
        }

        <li class="next to-right"><button class="pure-button">Next</button></li>
    </ul>

</div>



<div class="col-md-1">

</div>

<div class="col-md-6" id="extended-results">
    <div id="item-12" class="search-results">
        <h3>Repo Men (2012)</h3>
        <div class="img-container to-left">
            <img src="http://image.tmdb.org/t/p/w396/juU0imfyYlwfkKFdwE7ZMvLf16u.jpg" />
        </div>

        <h4>Description</h4>
        <div class="description">In the near future, when artificial human organs can be bought on credit, one man makes a living by repossessing organs their users can't pay for. What happens when the best repo man in the business can't make payments on his own artificial heart?</div>
        <hr />

        <h4>Tags</h4>
        <button class="pure-button button-small"><span class="glyphicon glyphicon-tag" style="font-size:x-small"></span> Evil Corporation</button>
        <button class="pure-button button-small"><span class="glyphicon glyphicon-tag" style="font-size:x-small"></span> Repo Man</button>
        <hr />

        <button class="pure-button button-art read-more to-right">Read more</button>
    </div>
    <div id="item-13" class="search-results" style="display: none;">
        <h3>Wrecking Ball (2013)</h3>
        <div class="img-container to-left">
            <img src="http://upload.wikimedia.org/wikipedia/en/thumb/0/06/Miley_Cyrus_-_Wrecking_Ball.jpg/220px-Miley_Cyrus_-_Wrecking_Ball.jpg" />
        </div>
        <h4>Description</h4>
        <div class="description">Wrecking Ball is a song performed by American recording artist Miley Cyrus for her fourth studio album Bangerz (2013). It was released on August 25, 2013, by RCA Records as the second single from the record. It was written by MoZella, Stephan Moccio, Sacha Skarbek, Lukasz Gottwald, and Henry Russell Walter. It was produced by Dr. Luke and Cirkut. </div>
        <hr />
        <h4>Tags</h4>
        <button class="pure-button button-small"><span class="glyphicon glyphicon-tag" style="font-size:x-small"></span> MileyIsGood</button>
        <button class="pure-button button-small"><span class="glyphicon glyphicon-tag" style="font-size:x-small"></span> Boner</button>
        <button class="pure-button button-art read-more to-right">Read more</button>
    </div>

</div>


