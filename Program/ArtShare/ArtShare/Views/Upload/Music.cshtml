@model ArtShare.Models.UploadMusicModel
@{
    ViewBag.Title = "Upload Music";
}

<h2>Upload Music</h2>

@using (Html.BeginForm("UploadMusic", "Upload", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
{
    <div class="col-md-4">
        <div class="fileinput fileinput-new" data-provides="fileinput">
            <span class="btn btn-default btn-file"><span class="fileinput-new">Select file to upload</span><span class="fileinput-exists">Change file</span><input type="file" name="File" required onchange="chooseType()"></span>
            <span class="fileinput-filename" id="fileName"></span>
            <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">&times;</a>
        </div>

        <br />

        <div class="fileinput fileinput-new" data-provides="fileinput">
            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                <img data-src="holder.js/100%x100%" src="data:image/svg+xml;base64," alt="hej">
            </div>
            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
            <div>
                <span class="btn btn-default btn-file"><span class="fileinput-new">Select thumbnail image</span><span class="fileinput-exists">Change thumbnail image</span><input type="file" name="Thumbnail" required></span>
                <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-horizontal">

            <div class="col-md-5">
                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.Title)</h4>
                    @Html.TextBoxFor(m => m.Details.Title, new { placeholder = "Title", required = "true", @class = "form-control" })
                </div>

                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.Description)</h4>
                    @Html.TextBoxFor(m => m.Details.Description, new { placeholder = "Description", required = "true", @class = "form-control" })
                </div>

                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.Artist)</h4>
                    @Html.TextBoxFor(m => m.Details.Artist, new { placeholder = "Artist", required = "true", @class = "form-control" })
                </div>

                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.ReleaseDate)</h4>
                    @Html.TextBoxFor(m => m.Details.ReleaseDate, new { placeholder = "ReleaseDate", required = "true", @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.TrackLength)</h4>
                    @Html.TextBoxFor(m => m.Details.TrackLength, new { placeholder = "TrackLength", required = "true", @class = "form-control" })
                </div>



            </div>

            <div class="col-md-2"></div>

            <div class="col-md-5">

                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.Price)</h4>
                    @Html.TextBoxFor(m => m.Details.Price, new { placeholder = "Price", required = "true", @class = "form-control", type = "number", min = "0", max = int.MaxValue })
                </div>

                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.Tags) <small>seperate with comma</small></h4>
                    @Html.TextBoxFor(m => m.Details.TagsString, new { placeholder = "Tags", required = "false", @class = "form-control" })
                </div>

                <div class="form-group">
                    <h4>@Html.DisplayNameFor(model => model.Details.Genres) <small>seperate with comma</small></h4>
                    @Html.TextBoxFor(m => m.Details.GenresString, new { placeholder = "Genres", required = "false", @class = "form-control" })
                </div>

            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success to-right">Upload</button>
            </div>
        </div>
    </div>

}